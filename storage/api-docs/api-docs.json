                                        "example": "2024-08-01T14:00:00Z"
                                    },
                                    "available_places": {
                                        "type": "integer",
                                        "example": 3
                                    },
                                    "price": {
                                        "type": "integer",
                                        "example": 50
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Trip created successfully",
